          Scanner input = new Scanner(System.in);
        
        int number;
        int total = 0;
        int count;
        
        System.out.println("this program calculates the");
        count = 1;
        while(count<=5){
        System.out.println("enter a number");
        number = input.nextInt();
        total = total+number;
         
        ++count;
        }
        System.out.println("total of five numbers " + total);
        
        System.out.println("this program calculates the");
        int i;
        for(i = 1; i<=5; ++i){
        System.out.println("enter a number");
        number = input.nextInt();
        total = total+number;
        }
        System.out.println("total of five numbers " + total);

            
        
